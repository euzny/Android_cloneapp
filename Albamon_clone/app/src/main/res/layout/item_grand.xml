<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="226dp"
        android:layout_height="140dp"
        android:background="@drawable/button_style"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/imgv_grand"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/img1" />

        <TextView
            android:id="@+id/grand_service"
            android:layout_width="220dp"
            android:layout_height="15dp"
            android:paddingLeft="5dp"
            android:text="쿠팡풀필먼트서비스"
            android:textColor="#123456"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/grand_info"
            android:layout_width="220dp"
            android:layout_height="20dp"
            android:paddingLeft="5dp"
            android:text="[월 최대 306만원/4월한정]"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/grand_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="강동구 천호동"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 월  "
                android:textColor="#FD4910"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/grand_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="290만원"
                android:textSize="10dp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>



</FrameLayout>
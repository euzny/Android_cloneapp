<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/button_style"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/focus_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="분실접수상담/받는전화/국민은행/근무환경"
            android:textColor="#123456"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/focus_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[급여인상/정착금지급]"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/focus_local"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="강동구 천호동"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 월  "
                android:textColor="#FD4910"
                android:textSize="11sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/focus_salary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="290만원"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:id="@+id/imgv_focus"
            android:scaleType="fitXY"
            android:src="@drawable/mainlogo"/>
</LinearLayout>